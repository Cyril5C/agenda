[Unit]
Description=Planning Papou Mamine - Kiosk Mode
After=graphical.target network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/cyril/.Xauthority
ExecStart=/home/cyril/kiosk/launch-kiosk.sh
Restart=on-failure
RestartSec=10

[Install]
WantedBy=graphical.target
